    <body>
        <nav id="header" class="fill"><ul class="nav-link">
            <li>  <a href="/">HOME</a></li>
             <li><a href="/syllabus">SYLLABUS</a></li>
             <li><a id="third" href="/question">QUESTION PAPER</a></li>
           </ul>
        </nav>

        <div id="head-cont">
        <h1>Please Fill this form to Upload Question Paper</h1>
    </div>
    <div id="form-container">
        
        <form ref='uploadForm' 
        id='uploadForm'  encType="multipart/form-data" class="form-horizontal" action="upload" method="post">
            <div class="form-group">
                <label for="name" class="control-label col-lg-2">Subject Name :</label>
                <div class="col-lg-10">
                    <input type="text" required autocomplete="off" class="form-control" name="subjectName" placeholder="Enter Subject Name">
                </div>
            </div>

            <div class="form-group"><label for="subjectCode" class="control-label col-lg-2">Subject Code:</label>
                <div class="col-lg-10">
                    <input class="form-control" id="subcode" type="text" name="subjectCode" required autocomplete="off" placeholder="Subject Code" />
                </div>
            </div>

            <div class="form-group"><label for="semester" class="control-label col-lg-2">Semester:</label>
                <div class="col-lg-10">
                    <input required name="semester" class="form-control" list="datalistOptions" id="exampleDataList"
                        placeholder="Enter Semester" />
                    <datalist id="datalistOptions">
                        <option value="semester1"></option>
                        <option value="semester2"></option>
                        <option value="semester3"></option>
                        <option value="semester4"></option>
                        <option value="semester5"></option>
                        <option value="semester6"></option>
                        <option value="semester7"></option>
                        <option value="semester8"></option>
                        <option value="semester9"></option>
                        <option value="semester10"></option>
                    </datalist>
                </div>
            </div>

            <div class="form-group"><label required for="stream" class="control-label col-lg-2">Stream</label>
                <div class="col-lg-10">
                    <label class="radio-inline"><input type="radio" name="stream" value="physics" id="">Physics</label>
                    <label class="radio-inline"><input type="radio" name="stream" value="chemistry" id="">Chemistry</label>
                    <label class="radio-inline"><input type="radio" name="stream" value="biology" id="">Biology</label>
                    <label class="radio-inline"><input type="radio" name="stream" value="maths" id="">Mathematics</label>
                    <label class="radio-inline"><input type="radio" name="stream" value="all" id="">All(For more than one subject)</label>
                </div>
            </div>
            <div class="form-group"><label for="examName" class="control-label col-lg-2">Session :</label>
                <div class="col-lg-10">
                    <select name="session" id="yearpicker"></select>
                </div>
            </div>
            <div class="form-group"><label for="examName" class="control-label col-lg-2">Exam Name:</label>
                <div class="col-lg-10">
                    <label for="" class="radio-inline"><input type="radio" name="examName" value="Mid-Semester" id="">Mid-Semester</label>
                    <label for="" class="radio-inline"><input type="radio" name="examName" value="End-Semester" id="">End-Semester</label>
                </div>
            </div>

            <div class="form-group"><label for="file" required class="control-label col-lg-2">File:</label>
                <div class="col-lg-10">
                        <input type="file" required name ="sampleFile" accept="application/pdf" class="custom-file-input" id="file">
                        <p>Max File size : 5MB</p>
                    </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10">
                <input class="btn btn-success" type="submit" value="Submit">
            </div></div>
            
            
        </form>
    </div>
    <footer>
        <p>Creator : Divyansh Sao </p>
    </footer>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script type="text/javascript">

        let startYear = 2000;
        let endYear = new Date().getFullYear();
        for (i = endYear; i > startYear; i--)
        {
          $('#yearpicker').append($('<option />').val(i).html(i+"-"+(i+1)));
        }

        // limit file size
        var uploadField = document.getElementById("file");
        document.getElementById("subcode").addEventListener("focusout",()=>{
            var subcode= document.getElementById("subcode").value;
            var letterNumber = /^[0-9a-zA-Z]+$/;
            if(subcode.match(letterNumber)){
                return true;
                    }else
                            { 
                alert("Please enter only Alphabets and number in Subject Code(ex: H501,P602,PL302)"); 
                return false; 
                            }
        });
    uploadField.onchange = function() {
        let filename = this.files[0].name
        let extension = filename.substr(filename.length-4)
        if(extension != ".pdf"){
            alert("please upload a pdf file !")
            this.value= "";
        }
    if(this.files[0].size > 6000000){
       alert("File is too big! Upload within Limit");
       this.value = "";
    };
};
        </script>
