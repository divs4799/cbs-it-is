    display: flex;
    justify-content: flex-end;
    align-items: center;
    min-height: 8vh;
    background-color: #00000029;
}
 .nav-link{
        display: flex;     
        width: 38%;
        justify-content: space-around;
        margin: 0;
 }
.nav-link a{
    color: silver;
    letter-spacing: 3px;
    font-weight: bold;
    font-size: 1rem;
    text-decoration: none;
}
.nav-link li{
    list-style: none;
    width:45%;
    min-height: 8vh;
    text-align: center;
    overflow: hidden;
}
.nav-link li:hover{
    color: #0000;
    text-decoration: #000;
    z-index: 1;
    
    animation: fill 1s forwards;
