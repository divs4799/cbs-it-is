  }
 
  @keyframes fill {
    0% {
      /* width: 40%; */
      /* height: 1px; */
    }
    100% {
      
      background: rgb(134, 167, 146);
    }
  }
  #form-container{
  width: 75%;
  margin: auto;
}
#head-cont{
    width: 75%;
    margin: 3rem auto;
    text-align: center;
    font-size: 1rem;
    color: #edffec;
}
#head-cont h1{font-size: 2rem;}
